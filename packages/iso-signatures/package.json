{
  "name": "iso-signatures",
  "type": "module",
  "version": "0.3.2",
  "description": "Signatures tooling.",
  "author": "Hugo Dias <hugomrdias@gmail.com> (hugodias.me)",
  "license": "MIT",
  "homepage": "https://github.com/hugomrdias/iso-repo/tree/main/packages/iso-signatures",
  "repository": {
    "url": "hugomrdias/iso-repo",
    "directory": "packages/iso-signatures"
  },
  "keywords": [
    "elliptic",
    "curve",
    "cryptography",
    "edwards",
    "p256",
    "p384",
    "p521",
    "secp256r1",
    "secp256k1",
    "ed25519",
    "ecdsa",
    "eddsa",
    "rsa",
    "signatures"
  ],
  "exports": {
    ".": {
      "types": "./dist/src/index.d.ts",
      "import": "./src/index.js"
    },
    "./types": {
      "types": "./dist/src/types.d.ts"
    },
    "./signers/*": {
      "types": "./dist/src/signers/*",
      "default": "./src/signers/*"
    },
    "./verifiers/*": {
      "types": "./dist/src/verifiers/*",
      "import": "./src/verifiers/*"
    },
    "./asn1": {
      "types": "./dist/src/asn1.d.ts",
      "import": "./src/asn1.js"
    },
    "./spki": {
      "types": "./dist/src/spki.d.ts",
      "import": "./src/spki.js"
    }
  },
  "main": "src/index.js",
  "types": "dist/src/index.d.ts",
  "typesVersions": {
    "*": {
      ".": [
        "dist/src/index"
      ],
      "types": [
        "dist/src/types"
      ],
      "signers/*": [
        "dist/src/signers/*"
      ],
      "verifiers/*": [
        "dist/src/verifiers/*"
      ],
      "asn1": [
        "./dist/src/asn1"
      ],
      "spki": [
        "./dist/src/spki"
      ]
    }
  },
  "files": [
    "src",
    "dist/src/**/*.d.ts",
    "dist/src/**/*.d.ts.map"
  ],
  "scripts": {
    "lint": "tsc --build && biome check --no-errors-on-unmatched --files-ignore-unknown=true .",
    "test": "tsc --build && pnpm run test:node && pnpm run test:browser",
    "test:node": "pw-test 'test/**/!(*.browser).test.js' --mode node",
    "test:browser": "pw-test 'test/**/!(*.node).test.js'"
  },
  "dependencies": {
    "@noble/ed25519": "^2.0.0",
    "iso-base": "workspace:^",
    "iso-did": "workspace:^"
  },
  "devDependencies": {
    "@types/assert": "^1.5.10",
    "@types/mocha": "^10.0.6",
    "@types/node": "^20.14.2",
    "assert": "^2.1.0",
    "mocha": "^10.3.0",
    "playwright-test": "^14.1.1",
    "type-fest": "^4.20.1",
    "typescript": "5.4.5"
  },
  "publishConfig": {
    "provenance": true
  },
  "depcheck": {
    "specials": [
      "bin"
    ],
    "ignores": [
      "@types/*",
      "assert",
      "type-fest",
      "mocha"
    ]
  }
}

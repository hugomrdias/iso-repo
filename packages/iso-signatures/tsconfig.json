{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "outDir": "dist",
    "lib": ["ESNext", "DOM"],
    "emitDeclarationOnly": true
  },
  "references": [
    {
      "path": "../iso-base"
    },
    {
      "path": "../iso-did"
    }
  ],
  "include": ["src", "scripts", "test", "package.json"],
  "exclude": ["node_modules", "dist", "out"],
  "typedocOptions": {
    "entryPoints": ["src/signers/*.js", "src/verifiers/*.js"],
    "includeVersion": true,
    "excludeExternals": true,
    "internalModule": "<internal>"
  }
}
